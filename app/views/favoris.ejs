<%- include('./partial/header'); %>

  <!-- Navigation -->
  <%- include('./partial/leftMenu'); %>

  <!-- Page Content -->
  <div class="container container-main">

      <div class="row">
        <div class="col">
          <h3 class="text-center">Votre liste de préférences</h3>

          <table class="table">
            <thead>
              <th>Article</th>
              <th>Prix HT</th>
              <th></th>
            </thead>
            <tbody>
              
              <% for (const iteratorFavoris of favoris) { %>

              <tr>
                <td>
                  <img class="img-thumbnail img-cart-list" src="/images/<%= iteratorFavoris.name.toLowerCase()%>/<%= iteratorFavoris.name.toLowerCase()+1%>.jpg" alt="">
                  <div class="item-description">
                      <h5 class="item-title"> 
                        <a href="/article/<%= iteratorFavoris.id %>"><%= iteratorFavoris.name %> </a>
                        
                      </h5>
                  </div>
                </td>

                <td>
                  <p class="item-subtotal">$<%= iteratorFavoris.price %></p>
                </td>

                <td>
                  <a href="/bookmarks/delete/<%= iteratorFavoris.id %>">Enlever de la liste</a>
                </td>
              </tr>
              <% } %>

              <% for (const iteratorArray of priceArray) { %>
              <tr>
                <td>
                  <p>Total HT</p>
                </td>
                  <td> $<%= iteratorArray.price %></td>
              </tr>


              <tr>
                <td>
                  <p>TVA</p>
                </td>
                  <td> $<%= iteratorArray.totalTva %></td>
              </tr>

              <tr>
                <td>
                  <p>Frais de livraison</p>
                </td>
                <td>$<%= iteratorArray.shipping %></td>
              </tr>


            </tbody>

            <tfoot>
              <tr>
                <td>
                  <p>Total</p>
                </td>
                <td>$<%=iteratorArray.totalWithTvaShipping %></td>
              </tr>
            </tfoot>

         
          <% } %>
        </table>
          <div class="row">
            <div class="col text-right">
                <a class="btn btn-success" href="/">
                  Retour à l'accueil
                </a>
            </div>
          </div>

        </div>
      </div>
  </div>


  <!-- Footer -->
  <%- include('./partial/footer'); %>
  